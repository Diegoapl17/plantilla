    <form>

        <div>
            <div style="padding-top: 7%;" class="d-inline-block ">
                <h5 style="font-weight: bold;">Datos del la venta</h5>

                <div class="form-group" id="margenForm3">
                    <div style="display: flex; justify-content: space-between; padding: 2%;padding-left: 10%">
                        <div class="col">
                            <label for="name">Id venta</label>
                            <div>
                                <input style="border-radius: 40px" value="1" id="idVenta" placeholder="1" type="text"
                                    class="form-control" disabled>
                            </div>
                        </div>
                        <div class="col">
                            <label for="exampleFormControlSelect1">Cliente</label>
                            <select id="cliente" style="border-radius: 40px" class="form-select"
                                id="exampleFormControlSelect1">
                                <option></option>
                                <option id="nn" value="fff">Andres</option>
                                <option id="nn">Raul</option>
                            </select>
                        </div>
                    </div>
                    
                    <div style="display: flex; justify-content: space-between; align-items: center">
                        <div class="col">
                            <label for="name">Fecha y hora</label>
                            <div>
                                <input style="border-radius: 40px" type="text" class="form-control" value="22/08/11"
                                    id="fecha" placeholder="22/08/11" disabled>
                            </div>
                        </div>
                        <div class="col">
                            <label for="name">Metodo de pago</label>
                            <div>
                                <input style="border-radius: 40px" id="pago" type="text" class="form-control"
                                    placeholder="">
                            </div>
                        </div>
                        <div class="col">
                            <label for="exampleFormControlSelect1">Estado</label>
                            <select id="cliente" style="border-radius: 40px" class="form-select"
                                id="exampleFormControlSelect1">
                                <option></option>
                                <option id="true" value="fff">Activo</option>
                                <option id="false">Inactivo</option>
                            </select>
                        </div>
                       
                    </div>

                </div>

                <h5 style="font-weight: bold; margin-top:4%; margin-bottom: 3%">Agregar productos a la venta</h5>

                <div id="margenForm2" style="margin-top: 4%;">
                    <div class="col">
                        <label for="exampleFormControlSelect1">Id producto</label>
                        <select id="idProducto" style="border-radius: 40px" class="form-select"
                            id="exampleFormControlSelect1">
                            <option></option>
                            <option id="nn" value="fff">1</option>
                            <option id="nn">2</option>
                            <option id="nn">3</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="name">Precio compra</label>
                        <div>
                            <input style="border-radius: 40px" type="number" id="precioCompra" class="form-control"
                                placeholder="">
                        </div>
                    </div>
                    <div class="col">
                        <label for="name">Precio venta</label>
                        <div>
                            <input style="border-radius: 40px" type="number" id="precioVenta" class="form-control"
                                placeholder="">
                        </div>
                    </div>

                    <div class="col">
                        <label for="name">Cantidad producto</label>
                        <div>
                            <input style="border-radius: 40px" type="number" id="cantidadProducto" class="form-control"
                                placeholder="">
                        </div>
                    </div>

                    <div class="col">
                        <label for="name">Total</label>
                        <div>
                            <input style="border-radius: 40px" type="text" id="number" class="form-control">
                        </div>
                    </div>



                </div>

            </div>
        </div>



        <div class="d-flex justify-content-center text-center">
            <button style="border-radius: 40px; margin-top:3% " type="button" class="btn btn-primary" id="botoncito"
                onclick="editar()"><i class="fa-solid fa-pen"></i>Editar</button>
            <script>
                function editar() {

                let cliente = document.getElementById('cliente').value
                let pago = document.getElementById('pago').value
                let estado = document.getElementById('estado').value
                let idProducto = document.getElementById('idProducto').value
                let precioCompra = document.getElementById('precioCompra').value
                let precioVenta = document.getElementById('precioVenta').value
                let cantidadProducto = document.getElementById('cantidadProducto').value
                let total = document.getElementById('total').value

            

                if( cliente=='' || pago=='' || estado=='' || idProducto=='' || precioCompra=='' || precioVenta=='' || cantidadProducto=='' || total==''){
                    Swal.fire('No se permiten campos vacios') 
                }else{
                Swal.fire({ 
                        title: 'Estas seguro?',
                        text: "Editaras la siguiente venta",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Aceptar!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire({
                            icon: 'success',
                        title: 'Servicio registrado con exito',
                        showConfirmButton: false,
                    })
                    setTimeout(()=>{
                        window.location.replace('/ventaProductos');
                    },2000)
        
                        }
                    })
            }
                    
                } 
            </script>
