<div class="d-flex justify-content-center text-center">

    <h1>Añadir cliente</h1>

    <form id="margenForm">
        <h5 style="font-weight: bold; padding: 2%">Datos del cliente</h5>
        <div style="padding-top: 5%;" class="d-flex justify-content-center text-center align-items: center">
            <div class="form-group">
                <div class="col">
                    <label for="name">Id cliente</label>
                    <div class="input-group">
                        <input id="idCliente" style="border-radius: 40px" type="number" 
                            class="form-control" >
                    </div>
                </div>
                <div class="col">
                    <label for="name">Dirección</label>
                    <div class="input-group">
                        <input id="direccion" style="border-radius: 40px" type="text" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <label for="name">Correo</label>
                    <div class="input-group">
                        <input id="correo" style="border-radius: 40px" type="text" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col">
                    <label for="name">Nombre</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                        </div>
                        <input id="nombre" style="border-radius: 40px" type="text" class="form-control"
                            placeholder="Nombre">
                    </div>
                </div>
                <div class="col">
                    <label for="name">Teléfono</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                        </div>
                        <input id="telefono" style="border-radius: 40px" type="number" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <label for="exampleFormControlSelect1">Estado</label>
                    <select id="estado" style="border-radius: 40px" class="form-select" id="exampleFormControlSelect1">
                        <option value="fff">Activo</option>
                        <option>Inactivo</option>
                    </select>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center text-center">
             <button id="btnRegistrar" style="border-radius: 40px; margin-top: 3%;" type="button" class="btn btn-primary"   name="action"><i class="fa-solid fa-plus"></i>Registrar</button>
            <script src="js/anadirCliente.js"></script>
    </form>
</div>
</div>